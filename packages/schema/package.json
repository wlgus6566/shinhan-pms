{
  "name": "@repo/schema",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "tsc -b -v --watch",
    "build": "tsc -b -v"
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "./dist/**"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "typescript": "5.8.2"
  }
}
